<h1>Books</h1>

<table>

  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>
        <% @books.each do |book| %>
        <span><%= book.title %></span>
        <% end %>
      </td>
      <td>
        <% @books.each do |book| %>
        <span><%= book.body %></span>
        <% end %>
      </td>
      <td>
         <% @books.each do |book| %>
        <span><%= link_to 'Show', book_path(book.id) %></span>
        <span><%= link_to 'Edit', edit_book_path(book.id) %></span>
        <span><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></span>
        <% end %>
      </td>
    </tr>
  </tbody>

</table>

<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
